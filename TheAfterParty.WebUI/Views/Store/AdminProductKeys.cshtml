@using TheAfterParty.Domain.Entities
@using TheAfterParty.WebUI.Models.Store
@model AdminProductKeyViewModel

@{
    ViewBag.Title = "View Keys";
}

<h2>View Keys</h2>

<div class="container">
    <div class="row">
        <div class="col-lg-2">ID</div>
        <div class="col-lg-4">Actions</div>
        <div class="col-lg-3">Name</div>
        <div class="col-lg-2">Is Gift?</div>
    </div>
    @foreach (ProductKey key in Model.ProductKeys)
    {
        <div class="row">
            <div class="col-lg-2">@key.ListingID</div>
            <div class="col-lg-4">
                @Html.ActionLink("Edit", "EditProductKey", "Store", new { id = key.ProductKeyID }, null)
                @Html.ActionLink("Del", "DeleteProductKey", "Store", new { id = key.ProductKeyID }, null)
            </div>
            <div class="col-lg-3">@key.Listing.ListingName</div>
            <div class="col-lg-3">@key.IsGift</div>
        </div>
    }
</div>