@using TheAfterParty.WebUI.Models.Account
@using TheAfterParty.Domain.Entities
@model AccountOrdersModel

@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            Order ID
        </div>
        <div class="col-lg-3">
            Purchase Date
        </div>
        <div class="col-lg-3 text-right">
            Total Cost
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <span>&nbsp;</span>
        </div>
    </div>
    @foreach (Order order in Model.Orders)
    {
        <div class="row">
            <div class="col-lg-6">
                #@order.OrderID
            </div>
            <div class="col-lg-3">
                @order.SaleDate
            </div>
            <div class="col-lg-3 text-right">
                @order.TotalSalePrice()
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <span>&nbsp;</span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                Game Name
            </div>
            <div class="col-lg-5">
                Activation Method / Product Key
            </div>
            <div class="col-lg-1 text-center">
                Cost
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <span>&nbsp;</span>
            </div>
        </div>
        foreach (ProductOrderEntry entry in order.ProductOrderEntries)
        {
            <div class="store-entry-sm row">
                <div class="col-lg-6 store-game-info">
                    <div class="outer-banner-container">
                        <div class="inner-store-banner-container" style="background-image: url(@entry.Listing.Product.ProductDetail.HeaderImageURL)"></div>
                    </div>
                    <div class="store-entry-name">
                        @entry.Listing.ListingName
                    </div>
                </div>
                <div class="col-lg-5 text-center">
                    @entry.ClaimedProductKey.Key
                </div>
                <div class="col-lg-1 text-center">
                    @entry.SalePrice
                </div>
            </div>
        }
    }
</div>