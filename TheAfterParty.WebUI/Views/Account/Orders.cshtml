@using TheAfterParty.WebUI.Models.Account
@using TheAfterParty.Domain.Entities
@model AccountOrdersModel

@{
    ViewBag.Title = "Orders";
}

<div class="container">
    <div class="row custom-row-header">
        <h3>My Orders</h3>
    </div>
    <div class="row custom-row">
        <div class="col-lg-3 text-center">
            Order No.
        </div>
        <div class="col-lg-3">
            Sale Date
        </div>
        <div class="col-lg-3">
            Items Purchased
        </div>
        <div class="col-lg-3 text-center">
            Cost
        </div>
    </div>
    @foreach (Order order in Model.Orders)
    {
        <div class="row">
            <div class="col-lg-3 text-primary text-center">
                @Html.ActionLink("#" + @order.OrderID, "Order", "Account", new { id = order.OrderID }, null)
            </div>
            <div class="col-lg-3">
                @(((DateTime)order.SaleDate).ToString("MMMM d, yyyy"))
            </div>
            <div class="col-lg-3 text-success">
                @order.ProductOrderEntries.Count
            </div>
            <div class="col-lg-3 text-center text-success">
                @order.TotalSalePrice()
            </div>
        </div>
    }
</div>