@using TheAfterParty.WebUI.Models.User
@model UserOwnsViewModel

@if (Model.AppID > 0)
{
    <div class="row custom-row-header no-top-marg vertical-align clickable" id="ownsHd" onclick="ToggleHidden(this,'ownsHd')">
        <div class="col-lg-11 col-md-11 col-xl-11 text-left vertical-align">
            <div class="outer-banner-container">
                <a href="@Model.GetComputedStorePageURL()">
                    <div class="inner-store-banner-container delayed-load" data-src="@Model.GetComputedBannerURL()" style="background-image: url('a.gif')"></div>
                </a>
            </div>
            <p class="col-header pad-right">Users who own "@Model.GameName"</p>
        </div>
        <div class="col-lg-1 col-md-1 col-xl-1">
            <span class="fa fa-chevron-up fa-2x expand-button"></span>
        </div>
    </div>
}
@if (Model.GameOwners != null)
{
    int count = Model.GameOwners.Count;
    if (count == 0)
    {
        <div class="row" id="ownsHd1">
            <div class="col-lg-12 col-md-12 col-xl-12 text-left">
                <h3 class="text-primary">No users own this game!</h3>
            </div>
        </div>
    }
    else
    {
        <div id="ownsHd1">
            @for (int i = 0; i < count; i = i + 3)
            {
            <div class="row">
                <div class="col-md-4 col-lg-4 col-xl-4 text-left vertical-align">
                    <a href="@Url.Action("UserProfile", "User", new { id = Model.GameOwners[i].UserName })">
                        <div class="outer-avatar-container">
                            <div class="inner-avatar-container-lg" style="background-image: url(@Model.GameOwners[i].MediumAvatar)"></div>
                        </div>
                    </a>
                    <span class="icon-blue pad-right">@Model.GameOwners[i].UserName</span>
                </div>
                <div class="col-md-4 col-lg-4 col-xl-4 text-left vertical-align">
                    @if ((i + 1) < count)
                    {
                    <a href="@Url.Action("UserProfile", "User", new { id = Model.GameOwners[i + 1].UserName })">
                        <div class="outer-avatar-container">
                            <div class="inner-avatar-container-lg" style="background-image: url(@Model.GameOwners[i + 1].MediumAvatar)"></div>
                        </div>
                    </a>
                    <span class="icon-blue pad-right">@Model.GameOwners[i + 1].UserName</span>
                    }
                </div>
                <div class="col-md-4 col-lg-4 col-xl-4 text-left vertical-align">
                    @if ((i + 2) < count)
                    {
                    <a href="@Url.Action("UserProfile", "User", new { id = Model.GameOwners[i + 2].UserName })">
                        <div class="outer-avatar-container">
                            <div class="inner-avatar-container-lg" style="background-image: url(@Model.GameOwners[i + 2].MediumAvatar)"></div>
                        </div>
                    </a>
                    <span class="icon-blue pad-right">@Model.GameOwners[i + 2].UserName</span>
                    }
                </div>
            </div>
            <div class="vertical-pad"></div>
            }
        </div>
    }
}
@if (Model.AppID > 0)
{
    <div class="row custom-row-header no-top-marg vertical-align clickable" id="DoesntOwnHd" onclick="ToggleHidden(this,'DoesntOwnHd')">
        <div class="col-lg-11 col-md-11 col-xl-11 text-left vertical-align">
            <div class="outer-banner-container">
                <a href="@Model.GetComputedStorePageURL()">
                    <div class="inner-store-banner-container delayed-load" data-src="@Model.GetComputedBannerURL()" style="background-image: url('a.gif')"></div>
                </a>
            </div>
            <p class="col-header pad-right">Users who do NOT own "@Model.GameName"</p>
        </div>
        <div class="col-lg-1 col-md-1 col-xl-1">
            <span class="fa fa-chevron-up fa-2x expand-button"></span>
        </div>
    </div>
}
@if (Model.GameNonOwners != null)
{
    int count = Model.GameNonOwners.Count;
    if (count == 0)
    {
        <div class="row" id="DoesntOwnHd1">
            <div class="col-lg-12 col-md-12 col-xl-12 text-left">
                <h3 class="text-primary">All users own this game!</h3>
            </div>
        </div>
    }
    else
    {
        <div id="DoesntOwnHd1">
            @for (int i = 0; i < count; i = i + 3)
            {
            <div class="row">
                <div class="col-md-4 col-lg-4 col-xl-4 text-left vertical-align">
                    <a href="@Url.Action("UserProfile", "User", new { id = Model.GameNonOwners[i].UserName })">
                        <div class="outer-avatar-container">
                            <div class="inner-avatar-container-lg" style="background-image: url(@Model.GameNonOwners[i].MediumAvatar)"></div>
                        </div>
                    </a>
                    <span class="icon-blue pad-right">@Model.GameNonOwners[i].UserName</span>
                </div>
                <div class="col-md-4 col-lg-4 col-xl-4 text-left vertical-align">
                    @if ((i + 1) < count)
                    {
                    <a href="@Url.Action("UserProfile", "User", new { id = Model.GameNonOwners[i + 1].UserName })">
                        <div class="outer-avatar-container">
                            <div class="inner-avatar-container-lg" style="background-image: url(@Model.GameNonOwners[i + 1].MediumAvatar)"></div>
                        </div>
                    </a>
                    <span class="icon-blue pad-right">@Model.GameNonOwners[i + 1].UserName</span>
                    }
                </div>
                <div class="col-md-4 col-lg-4 col-xl-4 text-left vertical-align">
                    @if ((i + 2) < count)
                    {
                    <a href="@Url.Action("UserProfile", "User", new { id = Model.GameNonOwners[i + 2].UserName })">
                        <div class="outer-avatar-container">
                            <div class="inner-avatar-container-lg" style="background-image: url(@Model.GameNonOwners[i + 2].MediumAvatar)"></div>
                        </div>
                    </a>
                    <span class="icon-blue pad-right">@Model.GameNonOwners[i + 2].UserName</span>
                    }
                </div>
            </div>
            <div class="vertical-pad"></div>
            }
        </div>
    }
}
