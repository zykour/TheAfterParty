@using TheAfterParty.WebUI.Models.User
@model UserAddBalancesViewModel

@{
    ViewBag.Title = "AddBalances";
}

<h2>AddBalances</h2>

<div>
    <div class="row">
        <div class="col-lg-4">
            @using (Html.BeginForm("AddBalances", "User", FormMethod.Post))
            {
                @Html.TextAreaFor(m => m.Input, new { @class = "text-box-multi-line form-control", rows = 5 })
                <div class="panel-footer">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            }
        </div>
        <div class="col-lg-8">
            <div>
                @for (int i = 0; i < Model.Users.Count(); i++)
                {
                    <div class="row">
                        <div class="col-lg-4">
                            @Model.Users[i].UserName
                        </div>
                        <div class="col-lg-4">
                            @Model.Users[i].Nickname
                        </div>
                        <div class="col-lg-4">
                            @Model.Users[i].Balance
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>