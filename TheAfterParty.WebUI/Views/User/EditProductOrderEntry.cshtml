@using TheAfterParty.Domain.Entities
@using TheAfterParty.WebUI.Models.User
@model AddEditProductOrderEntryViewModel

@{
    ViewBag.Title = "Edit ProductOrderEntry";
}

<h2>Edit ProductOrderEntry</h2>

@Html.ValidationSummary()

@using (Html.BeginForm("EditProductOrderEntry", "User", FormMethod.Post))
{
@Html.HiddenFor(x => x.ProductOrderEntry.ProductOrderEntryID)
@Html.HiddenFor(x => x.ProductOrderEntry.OrderID)
<span>Listing id: </span>@Html.TextBoxFor(x => x.ProductOrderEntry.ListingID, new { @Value = Model.ProductOrderEntry.ListingID })<br />
<span>Charged price: </span>@Html.TextBoxFor(x => x.ProductOrderEntry.SalePrice, new { @Value = Model.ProductOrderEntry.SalePrice })<br />
<input type="submit" name="Submit" />
}