@using TheAfterParty.Domain.Entities
@using TheAfterParty.WebUI.Models.User
@model AddEditBalanceEntryViewModel

@{
    ViewBag.Title = "Edit Balance Entry";
}

<h2>Edit Balance Entry</h2>

@Html.ValidationSummary()

@using (Html.BeginForm("EditBalanceEntry", "User", FormMethod.Post))
{
@Html.HiddenFor(x => x.UserID)
@Html.HiddenFor(x => x.BalanceEntry.BalanceEntryID)
@Html.HiddenFor(x => x.BalanceEntry.UserID)
@Html.HiddenFor(x => x.BalanceEntry.Date)
<span>Points adjusted (can leave blank if supplying objective ID): </span>@Html.TextBoxFor(x => x.BalanceEntry.PointsAdjusted, new { @Value = Model.BalanceEntry.PointsAdjusted })<<br />
<span>Note: </span>@Html.TextBoxFor(x => x.BalanceEntry.Notes, new { @Value = Model.BalanceEntry.Notes })<br />
<span>Objective ID (optional): </span>@Html.TextBoxFor(x => x.ObjectiveID, new { @Value = Model.ObjectiveID })<br />
<input type="submit" name="Submit" />
}