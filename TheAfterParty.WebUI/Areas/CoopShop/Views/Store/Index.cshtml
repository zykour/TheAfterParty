@using TheAfterParty.Domain.Entities
@model IEnumerable<Listing>

@{
    ViewBag.Title = "Shop";
    Layout = "~/Areas/CoopShop/Views/Shared/_Layout.cshtml";
}

<h2>Inventory</h2>

@foreach (Listing listing in Model)
{
    <div>
        <div>@listing.ListingPrice</div>
        <div>@listing.ListingName</div>
        <div>@listing.ListingID - @listing.Product.ProductName</div>
        <div>
            <div>@listing.Product.Platform</div>
            <div>@listing.Product.AppID</div>
            <div>@listing.Product.ProductDetail.HasAchievements</div>
        </div>
    </div>
}
